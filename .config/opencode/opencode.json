{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "azure/o3",
  "autoupdate": true,
  "share": "disabled",
  "provider": {
    "azure": {
      "models": {},
      "options": {
        "apiKey": "{file:azure_api_key.txt}",
        "resourceName": "{file:azure_resource_name.txt}"
      }
    }
  },
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "{file:github_pat.txt}"
      }
    }
  }
}
