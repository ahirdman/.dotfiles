// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"project_panel": {
		"dock": "right"
	},
	"tab_bar": {
		"show": false
	},
	"toolbar": {
		"breadcrumbs": true,
		"quick_actions": true,
		"selections_menu": true,
		"agent_review": true
	},
	"scrollbar": {
		"axes": {
			"horizontal": false,
			"vertical": true
		}
	},
	"theme": {
		"mode": "system",
		"light": "Catppuccin Macchiato - No Italics",
		"dark": "0x96f Theme"
	},
	"icon_theme": {
		"mode": "system",
		"dark": "Catppuccin Frapp√©",
		"light": "Zed (Default)"
	},
	"agent": {
		"default_profile": "ask",
  "always_allow_tool_actions": true,
  "enabled": true,
		"version": "2",
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-4.1"
		},
		"editor_model": {
			"provider": "openai",
			"model": "azure-openai"
		},
		"single_file_review": true,
		"language_models": {
			"openai": {
				"api_url": "https://oai-chatbot-test-sec.openai.azure.com/openai/deployments/gpt-4o",
				"available_models": [
					{
						"name": "azure-openai",
						"display_name": "Azure OpenAI",
						"max_tokens": 131072,
						"api_version": "2024-08-01-preview"
					}
				]
			}
		}
	},
	"telemetry": {
		"metrics": false,
		"diagnostics": false
	},
	"vim_mode": true,
	"ui_font_size": 16,
	"ui_font_family": "BerkeleyMono Nerd Font Propo",
	"buffer_font_size": 15,
	"buffer_font_family": "BerkeleyMono Nerd Font Propo",
	"buffer_font_weight": 400,
	"formatter": {
		"language_server": {
			"name": "biome"
		}
	},
	"lsp": {
		"biome": {
			"settings": {
				"require_config_file": false
			}
		}
	},
	"code_actions_on_format": {
		"source.fixAll.biome": true,
		"source.organizeImports.biome": true
	},
	"diagnostics": {
		"include_warnings": true,
		"inline": {
			"enabled": true,
			"padding": 20
		},
		"update_with_cursor": false,
		"primary_only": false,
		"use_rendered": false
	},
	"git": {
		"git_gutter": "tracked_files",
		"inline_blame": {
			"enabled": true,
			"show_commit_summary": true
		},
		"hunk_style": "staged_hollow"
	},
	"enable_preview_from_code_navigation": false
}
